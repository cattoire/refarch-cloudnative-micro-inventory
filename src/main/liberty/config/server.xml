<?xml version="1.0" encoding="UTF-8"?>
<server description="inventory server">
    <featureManager>
        <feature>servlet-4.0</feature>
        <feature>springBoot-2.0</feature>
    </featureManager>
    <httpEndpoint id="defaultHttpEndpoint" httpPort="8080" httpsPort="8443" />
    <springBootApplication id="liberty-inventory-spring" location="thin-liberty-inventory-spring-0.1-SNAPSHOT.jar" name="liberty-inventory-spring">
        <applicationArgument>--server.server.context-path=/micro</applicationArgument>
        <applicationArgument>--server.servlet.context-path=/micro</applicationArgument>
    </springBootApplication>
</server>